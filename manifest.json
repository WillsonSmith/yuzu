{
  "name": "CrispyCrunch",
  "description": "An enhancement suite for Crunchyroll",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "/web/assets/js/background.js"
  },
  "action": {
    "default_popup": "/web/index.html"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "css": ["/web/assets/vendor/shoelace/dist/themes/light.css", "/web/assets/vendor/shoelace/dist/themes/dark.css"],
      "js": ["/web/assets/js/page-script.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["/web/assets/js/lit-setup.js", "/web/assets/vendor/shoelace/dist/*"],
    "matches": ["<all_urls>"]
  }],

  "permissions": [ "storage", "activeTab", "scripting", "cookies" ],
  "host_permissions": [ "https://*/*" ]
}